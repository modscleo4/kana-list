{
  "$id": "https://raw.githubusercontent.com/modscleo4/kana-list/master/js/kana-list.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "JSON schema for the Kana List (kana-list.json) file",
  "type": "object",
  "definitions": {
    "kana": {
      "type": "object",
      "default": {
        "hiragana": "",
        "katakana": "",
        "roumaji": "",
        "ipa": ""
      },
      "properties": {
        "hiragana": {
          "type": "string",
          "description": "Hiragana symbol"
        },
        "katakana": {
          "type": "string",
          "description": "Katakana symbol"
        },
        "roumaji": {
          "type": "string",
          "description": "Romanization"
        },
        "ipa": {
          "type": "string",
          "description": "IPA representation"
        },
        "combination": {
          "type": "object",
          "description": "Combination of what symbols",
          "default": [],
          "properties": {
            "hiragana": {
              "items": {
                "type": "string"
              },
              "uniqueItems": false,
              "default": []
            },
            "katakana": {
              "items": {
                "type": "string"
              },
              "uniqueItems": false,
              "default": []
            }
          }
        }
      },
      "required": [
        "hiragana",
        "katakana",
        "roumaji",
        "ipa"
      ]
    }
  },
  "properties": {
    "gojuuon": {
      "description": "The fifty sounds",
      "type": "array",
      "items": {
        "$ref": "#/definitions/kana"
      }
    },
    "youon": {
      "description": "Palatilization",
      "type": "array",
      "items": {
        "$ref": "#/definitions/kana"
      }
    },
    "sokuon": {
      "description": "chiisai tsu, mark a geminate consonant",
      "type": "array",
      "items": {
        "$ref": "#/definitions/kana"
      }
    },
    "tokushuon": {
      "description": "Extended Kana for foreign sounds",
      "type": "array",
      "items": {
        "$ref": "#/definitions/kana"
      }
    }
  },
  "required": [
    "gojuuon",
    "youon",
    "sokuon",
    "tokushuon"
  ],
  "default": {
  }
}
